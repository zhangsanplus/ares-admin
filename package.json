{
  "name": "ares-admin",
  "type": "module",
  "version": "1.1.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "A management system template based on Vue3 and Element Plus",
  "author": "zhangsanplus",
  "license": "MIT",
  "homepage": "https://github.com/zhangsanplus/ares-admin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangsanplus/ares-admin.git"
  },
  "bugs": {
    "url": "https://github.com/zhangsanplus/ares-admin/issues"
  },
  "keywords": [
    "vue3",
    "element-plus",
    "typescript",
    "vue3 admin",
    "vue-admin-template",
    "ares-admin"
  ],
  "engines": {
    "node": ">=18.12.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "build:test": "vue-tsc --noEmit && vite build --mode test",
    "preview": "npm run build && vite preview --host",
    "report": "cross-env REPORT=true npm run build",
    "lint:css": "stylelint **/*.{css,scss,vue} --fix",
    "lint:js": "eslint --fix",
    "lint:ls": "ls-lint",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:ls && npm run typecheck",
    "typecheck": "vue-tsc --noEmit",
    "commit": "git-cz",
    "release": "bumpp",
    "up": "taze major -I",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^12.7.0",
    "axios": "^1.7.9",
    "dayjs": "^1.11.13",
    "echarts": "^5.6.0",
    "element-plus": "^2.9.5",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.5.0",
    "vue3-slide-verify": "^1.1.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@babel/core": "^7.26.9",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@iconify-json/ep": "^1.2.2",
    "@ls-lint/ls-lint": "^2.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.5",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-legacy": "^6.0.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/babel-plugin-jsx": "^1.2.5",
    "bumpp": "^10.0.3",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-git": "^1.11.0",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "mrm": "^4.1.22",
    "postcss": "^8.5.3",
    "postcss-html": "^1.8.0",
    "postcss-scss": "^4.0.9",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.85.1",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.14.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-config-standard": "^37.0.0",
    "taze": "^18.6.0",
    "terser": "^5.39.0",
    "typescript": "^5.7.3",
    "unplugin-auto-import": "^19.1.0",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.4.0",
    "vite": "^6.2.0",
    "vite-plugin-compression": "^0.5.1",
    "vue-tsc": "^2.2.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no -- commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix"
    ],
    "src/**/*.{css,vue,scss}": [
      "stylelint --fix"
    ],
    "src/**": [
      "ls-lint"
    ]
  }
}
