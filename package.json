{
  "name": "ares-admin",
  "type": "module",
  "version": "1.0.5",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "description": "A management system template based on Vue3 and Element Plus",
  "author": "zhangsanplus",
  "license": "MIT",
  "homepage": "https://github.com/zhangsanplus/ares-admin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangsanplus/ares-admin.git"
  },
  "bugs": {
    "url": "https://github.com/zhangsanplus/ares-admin/issues"
  },
  "keywords": [
    "vue3",
    "typescript",
    "element-plus",
    "template",
    "admin",
    "ares-admin"
  ],
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "build:test": "vue-tsc --noEmit && vite build --mode test",
    "preview": "npm run build && vite preview",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint:css": "stylelint **/*.{css,scss,vue} --fix",
    "lint:js": "eslint --fix",
    "lint:ls": "ls-lint",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:ls",
    "typecheck": "vue-tsc --noEmit",
    "commit": "git-cz",
    "release": "bumpp",
    "up": "taze major -I"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vueuse/core": "^10.7.2",
    "axios": "^1.6.5",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "element-plus": "^2.5.3",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.2.5",
    "vue3-slide-verify": "^1.1.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.3",
    "@babel/core": "^7.23.7",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@iconify-json/ep": "^1.1.14",
    "@ls-lint/ls-lint": "^2.2.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.5",
    "@types/nprogress": "^0.2.3",
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/babel-plugin-jsx": "^1.2.0",
    "bumpp": "^9.3.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.8.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mrm": "^4.1.22",
    "postcss": "^8.4.33",
    "postcss-html": "^1.6.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.69.7",
    "stylelint": "^16.2.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^36.0.0",
    "taze": "^0.13.1",
    "terser": "^5.24.0",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-icons": "^0.18.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^4.5.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue-tsc": "^1.8.27"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix"
    ],
    "src/**/*.{css,vue,scss}": [
      "stylelint --fix"
    ],
    "src/**": [
      "ls-lint"
    ]
  }
}
