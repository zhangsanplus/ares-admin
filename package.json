{
  "name": "ares-admin",
  "version": "1.0.3",
  "private": true,
  "packageManager": "pnpm@7.14.1",
  "description": "A management system template based on Vue 3 and Element Plus for a fast and efficient development experience",
  "author": "zhangsanplus",
  "license": "MIT",
  "homepage": "https://github.com/zhangsanplus/ares-admin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangsanplus/ares-admin.git"
  },
  "keywords": [
    "vue3",
    "typescript",
    "element-plus",
    "admin",
    "template"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit && vite build",
    "build:test": "vue-tsc --noEmit && vite build --mode test",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint:css": "stylelint **/*.{css,scss,vue} --fix",
    "lint:js": "eslint . --fix",
    "lint:ls": "ls-lint",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:ls",
    "typecheck": "vue-tsc --noEmit",
    "preview": "npm run build && vite preview",
    "release": "bumpp",
    "up": "taze major -I",
    "commit": "git-cz"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@vueuse/core": "^10.3.0",
    "axios": "^1.4.0",
    "dayjs": "^1.11.9",
    "echarts": "^5.4.3",
    "element-plus": "^2.3.9",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-clipboard3": "^2.0.0",
    "vue-router": "^4.2.4",
    "vue3-slide-verify": "^1.1.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@babel/core": "^7.22.10",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@iconify-json/ep": "^1.1.12",
    "@ls-lint/ls-lint": "^2.0.1",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.4.9",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/babel-plugin-jsx": "^1.1.5",
    "bumpp": "^9.1.1",
    "commitizen": "^4.3.0",
    "cz-git": "^1.7.1",
    "eslint": "^8.46.0",
    "eslint-plugin-antfu": "^0.40.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "mrm": "^4.1.17",
    "postcss": "^8.4.27",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "sass": "^1.65.1",
    "stylelint": "^15.10.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "taze": "^0.11.2",
    "terser": "^5.19.2",
    "typescript": "^5.1.6",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-icons": "^0.16.5",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.9",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-restart": "^0.3.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue-tsc": "1.8.8"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix"
    ],
    "src/**/*.{css,vue,scss}": [
      "stylelint --fix"
    ],
    "src/**": [
      "ls-lint"
    ]
  }
}
